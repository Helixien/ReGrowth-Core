<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--============================= Bushes ================================-->
	<ThingDef ParentName="PlantBase">
		<defName>RG_Plant_Raspberry</defName>
		<label>raspberry bush</label>
		<description>A bushy wild plant which yields delicious red berries. Berries can be cooked, but they're also good to eat even when raw.</description>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<Nutrition>0.35</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/RaspberryPlant</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.55, 0.2, 0.2)</volume>
				<offset>(0,0,-0.25)</offset>
			</shadowData>
		</graphicData>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<fillPercent>0.20</fillPercent>
		<pathCost>30</pathCost>
		<plant>
			<fertilityMin>0.5</fertilityMin>
			<fertilitySensitivity>0.5</fertilitySensitivity>
			<growDays>4</growDays>
			<leaflessGraphicPath>Things/Plant/Leafless/RaspberryPlant_Leafless</leaflessGraphicPath>
			<immatureGraphicPath>Things/Plant/Immature/RaspberryPlant_Immature</immatureGraphicPath>
			<harvestYield>6</harvestYield>
			<harvestWork>210</harvestWork>
			<harvestTag>Standard</harvestTag>
			<harvestAfterGrowth>0.30</harvestAfterGrowth>
			<harvestedThingDef>RG_RawRaspberries</harvestedThingDef>
			<wildClusterRadius>5</wildClusterRadius>
			<wildClusterWeight>250</wildClusterWeight>
			<visualSizeRange>0.7~1.2</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<humanFoodPlant>true</humanFoodPlant>
			<mustBeWildToSow>true</mustBeWildToSow>
			<sowResearchPrerequisites/>
		</plant>
	</ThingDef>
</Defs>
