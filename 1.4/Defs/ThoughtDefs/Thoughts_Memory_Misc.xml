<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThoughtDef>
		<defName>RG_Wet</defName>
		<durationDays>0.1</durationDays>
		<stackLimit>1</stackLimit>
		<nullifyingPrecepts>
			<li MayRequire="Ludeon.RimWorld.Ideology">RoughLiving_Welcomed</li>
		</nullifyingPrecepts>
		<stages>
			<li>
				<label>wet</label>
				<description>I'm wet.</description>
				<baseMoodEffect>-1</baseMoodEffect>
			</li>
		</stages>
		<modExtensions>
			<li Class="VFECore.ThoughtExtensions">
				<removeThoughtsWhenAdded>
					<li>RG_ExtremelyWet</li>
					<li>SoakingWet</li>
				</removeThoughtsWhenAdded>
			</li>
		</modExtensions>
	</ThoughtDef>
	<ThoughtDef>
		<defName>RG_ExtremelyWet</defName>
		<durationDays>0.3</durationDays>
		<stackLimit>1</stackLimit>
		<nullifyingPrecepts>
			<li MayRequire="Ludeon.RimWorld.Ideology">RoughLiving_Welcomed</li>
		</nullifyingPrecepts>
		<stages>
			<li>
				<label>extremely wet</label>
				<description>I'm extremely wet.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
		<modExtensions>
			<li Class="VFECore.ThoughtExtensions">
				<removeThoughtsWhenAdded>
					<li>RG_Wet</li>
					<li>SoakingWet</li>
				</removeThoughtsWhenAdded>
			</li>
		</modExtensions>
	</ThoughtDef>
	<ThoughtDef>
		<defName>RG_Sandy</defName>
		<durationDays>0.5</durationDays>
		<stackLimit>1</stackLimit>
		<nullifyingPrecepts>
			<li MayRequire="Ludeon.RimWorld.Ideology">RoughLiving_Welcomed</li>
		</nullifyingPrecepts>
		<stages>
			<li>
				<label>sandy</label>
				<description>There is sand like..... everywhere! Even in my eyes!</description>
				<baseMoodEffect>-6</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>RG_HotSpringWet</defName>
		<durationDays>0.5</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>warm water</label>
				<description>The hot water from the hot spring felt amazing!</description>
				<baseMoodEffect>+3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
</Defs>