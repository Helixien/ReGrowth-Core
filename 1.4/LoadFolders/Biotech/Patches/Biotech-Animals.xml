<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
			<!-- ================================ Animal Patches	====================== -->
			<!-- ================================ Toxalope	====================== -->
			<li Class="PatchOperationReplace">
				<xpath>/Defs/PawnKindDef[defName = "Toxalope"]/lifeStages/li[1]/bodyGraphicData</xpath>
				<value>
					<bodyGraphicData>
						<texPath>Things/Pawn/Animal/Toxalope/CalfToxalope</texPath>
						<drawSize>1.2</drawSize>
						<shaderType>Cutout</shaderType>
						<shadowData>
							<volume>(0.4, 0.3, 0.3)</volume>
							<offset>(0,0,-0.2)</offset>
						</shadowData>
					</bodyGraphicData>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/PawnKindDef[defName = "Toxalope"]/lifeStages/li[1]/dessicatedBodyGraphicData</xpath>
				<value>
					<dessicatedBodyGraphicData>
						<texPath>Things/Pawn/Animal/Toxalope/CalfToxalope_dessicated</texPath>
						<drawSize>1.2</drawSize>
					</dessicatedBodyGraphicData>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/PawnKindDef[defName = "Toxalope"]/lifeStages/li[1]</xpath>
				<value>
					<corpseGraphicData>
						<texPath>Things/Pawn/Animal/Toxalope/CalfToxalope_corpse</texPath>
						<drawSize>1.2</drawSize>
					</corpseGraphicData>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/PawnKindDef[defName = "Toxalope"]/lifeStages/li[2]</xpath>
				<value>
					<corpseGraphicData>
						<texPath>Things/Pawn/Animal/Toxalope/Toxalope_corpse</texPath>
						<drawSize>1.5</drawSize>
					</corpseGraphicData>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/PawnKindDef[defName = "Toxalope"]/lifeStages/li[3]</xpath>
				<value>
					<corpseGraphicData>
						<texPath>Things/Pawn/Animal/Toxalope/Toxalope_corpse</texPath>
						<drawSize>2.0</drawSize>
					</corpseGraphicData>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>