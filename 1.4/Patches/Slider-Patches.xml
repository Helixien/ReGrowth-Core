<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- ================ Bathe joy activity chance ================ -->
	<Operation Class="ReGrowthCore.PatchOperationSliderFloat">
		<label>Tweak base chance of bathing</label>
		<tooltip>Adjust the base chance of colonists bathing as a recreational activity.</tooltip>
		<id>RG_BaseChanceBathingActivity</id>
		<xpath>Defs/JoyGiverDef[defName="RG_BatheJoyGiver"]/baseChance</xpath>
		<range>0~3</range>
		<defaultValue>1.5</defaultValue>
	</Operation>
	<!-- ================ Leaf beauty ================ -->
	<Operation Class="ReGrowthCore.PatchOperationSliderFloat">
		<label>Tweak leaf filth beauty value</label>
		<tooltip>Adjust the base beauty value of fallen leaf filth.</tooltip>
		<id>RG_FallenLeafBeauty</id>
		<xpath>Defs/ThingDef[@Name="RG_BaseFilthLeaves"]/statBases/Beauty</xpath>
		<range>-10~10</range>
		<defaultValue>-8</defaultValue>
	</Operation>
	<Operation Class="ReGrowthCore.PatchOperationSliderFloat">
		<label>Tweak leaf filth outdoor beauty value</label>
		<tooltip>Adjust the base outdoor beauty value of fallen leaf filth.</tooltip>
		<id>RG_FallenLeafBeautyOutdoor</id>
		<xpath>Defs/ThingDef[@Name="RG_BaseFilthLeaves"]/statBases/BeautyOutdoors</xpath>
		<range>-10~10</range>
		<defaultValue>0</defaultValue>
	</Operation>
</Patch>