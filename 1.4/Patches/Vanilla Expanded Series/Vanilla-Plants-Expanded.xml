<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--============================================== Vanilla Plants Expanded ==============================================-->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Plants Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="RG_RawRaspberries"]</xpath>
					<value>
						<thingCategories Inherit="False">
							<li>VCE_Fruit</li>
						</thingCategories>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/VanillaPlantsExpanded.TillableTerrainDef[defName="VCE_AcceptedTillableTerrains"]/terrains</xpath>
					<value>
						<li>RG_TundraSoil</li>
						<li>RG_BorealSoil</li>
						<li>RG_TemperateSoil</li>
						<li>RG_DepletedSoil</li>
						<li>RG_AspenSoil</li>
						<li>RG_BoilingSoil</li>
						<li>RG_AnimaSoil</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	<!--============================================== Vanilla Plants Expanded - Mushrooms ==============================================-->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Plants Expanded - Mushrooms</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/VanillaPlantsExpandedMushrooms.MushroomGrowZoneTerrainsDef[defName="VPE_MushroomGrowZoneTerrains"]/allowedTerrains</xpath>
					<value>
						<li>RG_AridSoil</li>
						<li>RG_TundraSoil</li>
						<li>RG_BorealSoil</li>
						<li>RG_TemperateSoil</li>
						<li>RG_TropicalSoil</li>
						<li>RG_DepletedSoil</li>
						<li>RG_AspenSoil</li>
						<li>RG_BoilingSoil</li>
						<li>RG_AnimaSoil</li>
						<li>RG_AnimaSoilEnchanted</li>
						<li>RG_DepletedGravel</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>