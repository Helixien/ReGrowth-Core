	<ThingDef ParentName="MoteBase">
		<defName>RG_Mote_WaterFog</defName>
		<graphicData>
			<texPath>Things/Mote/AirPuff</texPath>
		</graphicData>
		<altitudeLayer>MoteOverhead</altitudeLayer>
		<mote>
			<fadeInTime>30</fadeInTime>
			<solidTime>60</solidTime>
			<fadeOutTime>30</fadeOutTime>
		</mote>
	</ThingDef>
	<!--=============== Devil Dust Puff ==============-->
