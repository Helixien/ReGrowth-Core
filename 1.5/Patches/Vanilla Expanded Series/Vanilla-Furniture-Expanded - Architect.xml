<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--============================================== Vanilla Furniture Expanded - Architect ==============================================-->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Furniture Expanded - Architect</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/TerrainDef[defName = defName="RG_AncientConcrete" or defName="RG_LavaRock" or defName="RG_HotSpringSand"]/affordances</xpath>
					<value>
						<li>VFEArch_Foundation</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/TerrainDef[defName = defName="RG_DepletedSoil"]/affordances</xpath>
					<value>
						<li>VFEArch_Soil</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>