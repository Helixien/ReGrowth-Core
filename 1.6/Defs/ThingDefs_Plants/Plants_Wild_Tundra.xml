<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--====================================== Tundra Grass ======================================== -->
	<ThingDef ParentName="RG_GrassBase">
		<defName>RG_Plant_TundraGrass</defName>
		<graphicData>
			<texPath>Things/Plant/RG_TundraGrass</texPath>
		</graphicData>
	</ThingDef>
	<!--====================================== Tundra Tall Grass ======================================== -->
	<ThingDef ParentName="RG_TallGrassBase">
		<defName>RG_Plant_TundraTallGrass</defName>
		<description>Wild tall tundra grass. Slows down anyone moving over it.</description>
		<graphicData>
			<texPath>Things/Plant/RG_TundraTallGrass</texPath>
		</graphicData>
	</ThingDef>
	<!--====================================== Red Brambles ======================================== -->
	<ThingDef ParentName="RG_BramblesBase">
		<defName>RG_Plant_BramblesRed</defName>
		<description>Tangled, thorny, woody shoots covered with leaves. Brambles grow in clusters, and slow down anyone moving over them.</description>
		<graphicData>
			<texPath>Things/Plant/RG_RedBrambles</texPath>
		</graphicData>
	</ThingDef>
	<!--====================================== Yellow Brambles ======================================== -->
	<ThingDef ParentName="RG_BramblesBase">
		<defName>RG_Plant_BramblesYellow</defName>
		<description>Tangled, thorny, woody shoots covered with leaves. Brambles grow in clusters, and slow down anyone moving over them.</description>
		<graphicData>
			<texPath>Things/Plant/RG_YellowBrambles</texPath>
		</graphicData>
	</ThingDef>
	<!--====================================== Crimson Cushion ======================================== -->
	<ThingDef ParentName="RG_CarpetScrubsBase">
		<defName>RG_Plant_CrimsonCushion</defName>
		<label>crimson cushion</label>
		<description>Wild crimson colored carpet plant. Takes a long time to grow, but is very frost-resistant.</description>
		<graphicData>
			<texPath>Things/Plant/RG_TundraScrubsRed</texPath>
		</graphicData>
	</ThingDef>
	<!--====================================== Tundra Cotton ======================================== -->
	<ThingDef ParentName="PlantBase">
		<defName>RG_Plant_TundraCotton</defName>
		<label>tundra cotton</label>
		<description>A small flower with large cotton balls. Being very frost-resistant it grows only in tundra regions.</description>
		<graphicData>
			<texPath>Things/Plant/RG_TundraCotton</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowOrSandDepth>0.7</hideAtSnowOrSandDepth>
		<statBases>
			<MaxHitPoints>95</MaxHitPoints>
			<Beauty>2</Beauty>
			<Nutrition>0.06</Nutrition>
		</statBases>
		<plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0.3</fertilitySensitivity>
			<growDays>4.6</growDays>
			<mustBeWildToSow>true</mustBeWildToSow>
			<sowResearchPrerequisites/>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<harvestYield>2</harvestYield>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>Cloth</harvestedThingDef>
			<maxMeshCount>9</maxMeshCount>
			<visualSizeRange>0.3~0.48</visualSizeRange>
			<topWindExposure>0.1</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>20</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
	</ThingDef>
	<!--====================================== Lupine ======================================== -->
	<ThingDef ParentName="PlantBase">
		<defName>RG_Plant_LupineIceland</defName>
		<label>lupine</label>
		<description>A long beautiful wildflower that grows in colder climates.</description>
		<statBases>
			<MaxHitPoints>75</MaxHitPoints>
			<Beauty>6</Beauty>
			<Nutrition>0.16</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/RG_LupineIceland</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowOrSandDepth>0.6</hideAtSnowOrSandDepth>
		<ingestible/>
		<plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>2.5</growDays>
			<mustBeWildToSow>true</mustBeWildToSow>
			<sowResearchPrerequisites/>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<maxMeshCount>16</maxMeshCount>
			<visualSizeRange>0.5~0.7</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>3</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
	</ThingDef>
	<!--====================================== Tundra Pine ======================================== -->
	<ThingDef ParentName="TreeBase">
		<defName>RG_Tree_TundraTreePine</defName>
		<label>pine tree</label>
		<description>A large yellow conifer covered with prickly pine cones. It grows in a distinctive conical shape.</description>
		<graphicData>
			<texPath>Things/Plant/RG_TundraTreePine</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.12, 0.3, 0.12)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<Beauty>3</Beauty>
			<BeautyOutdoors>3</BeautyOutdoors>
		</statBases>
		<ingestible/>
		<plant>
			<growDays>20</growDays>
			<visualSizeRange>1.1~2.5</visualSizeRange>
			<harvestWork>800</harvestWork>
			<harvestYield>23</harvestYield>
			<immatureGraphicPath>Things/Plant/_Immature/RG_TundraTreePine_Immature</immatureGraphicPath>
		</plant>
	</ThingDef>
