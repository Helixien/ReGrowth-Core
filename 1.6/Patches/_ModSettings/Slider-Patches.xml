<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- ================ Bathe joy activity chance ================ -->
	<Operation Class="ModSettingsFramework.PatchOperationSliderFloat">
		<label>Base chance of bathing</label>
		<tooltip>Adjust the base chance of colonists bathing as a recreational activity. Default: 2.5</tooltip>
		<id>RG_BaseChanceBathingActivity</id>
		<category>RG_Core</category>
		<order>80</order>
		<xpath>Defs/JoyGiverDef[defName="RG_BatheJoyGiver"]/baseChance</xpath>
		<range>0~10</range>
		<defaultValue>2.5</defaultValue>
	</Operation>
	<!-- ================ Leaf beauty ================ -->
	<Operation Class="ModSettingsFramework.PatchOperationSliderFloat">
		<label>Leaf filth beauty value</label>
		<tooltip>Adjust the base beauty value of fallen leaf filth. Default: -4</tooltip>
		<id>RG_FallenLeafBeauty</id>
		<category>RG_Core</category>
		<order>90</order>
		<xpath>Defs/ThingDef[@Name="RG_BaseFilthLeaves"]/statBases/Beauty</xpath>
		<range>-10~10</range>
		<defaultValue>-4</defaultValue>
	</Operation>
	<Operation Class="ModSettingsFramework.PatchOperationSliderFloat">
		<label>Leaf filth outdoor beauty value</label>
		<tooltip>Adjust the base outdoor beauty value of fallen leaf filth. Default: 0</tooltip>
		<id>RG_FallenLeafBeautyOutdoor</id>
		<category>RG_Core</category>
		<order>100</order>
		<xpath>Defs/ThingDef[@Name="RG_BaseFilthLeaves"]/statBases/BeautyOutdoors</xpath>
		<range>-10~10</range>
		<defaultValue>0</defaultValue>
	</Operation>
</Patch>